<resources>

    <!-- Tema base de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Estas dos características son imprescindibles para poder manejar nuesta ActionBar manualmente -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.ImageView" />

    <style name="AppTheme.TextView" />

    <!-- Estilo de las imágenes de los items del grid -->
    <style name="AppTheme.ImageView.TVShowItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_image_background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Estilo para el texto de los items del grid-->
    <style name="AppTheme.TextView.TVShowItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/alpha_background</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">bottom</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin_half</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin_half</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tv_show_item_text_size</item>
    </style>

    <!-- Estilo de los titulos generales de la aplicación-->
    <style name="AppTheme.TextView.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/tv_show_list_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Estilo general de los textos de la vista de detalle-->
    <style name="AppTheme.TextView.Detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin_half</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin_half</item>
    </style>

    <!-- Estilo del título de la vista de detalle -->
    <style name="AppTheme.TextView.Detail.Title">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
    </style>

    <!-- Estilo de los subtitulos de secciones de la vista de detalle -->
    <style name="AppTheme.TextView.Detail.Header">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo general de Toolbar -->
    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">?android:attr/actionBarSize</item>
    </style>

</resources>
